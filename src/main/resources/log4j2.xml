<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    <Property name="LOG_DIR">logs</Property>
    <Property name="LOG_FILE">servlet_employee</Property>
  </Properties>

  <Appenders>
    <!-- Console: INFO and above for normal monitoring -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
    </Console>

    <!-- File: INFO and above for audit -->
    <RollingFile name="FileAppender"
                 fileName="${LOG_DIR}/${LOG_FILE}.log"
                 filePattern="${LOG_DIR}/${LOG_FILE}-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
      <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
    </RollingFile>

    <!-- Diagnostic file: all levels (TRACE, DEBUG, INFO, WARN, ERROR, FATAL) for debugging -->
    <RollingFile name="DiagnosticFile"
                 fileName="${LOG_DIR}/${LOG_FILE}-diagnostic.log"
                 filePattern="${LOG_DIR}/${LOG_FILE}-diagnostic-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <!-- Application: TRACE/DEBUG go to diagnostic file; INFO+ to console and main file -->
    <Logger name="ServletController" level="TRACE" additivity="false">
      <AppenderRef ref="Console" level="INFO"/>
      <AppenderRef ref="FileAppender" level="INFO"/>
      <AppenderRef ref="DiagnosticFile" level="TRACE"/>
    </Logger>
    <Logger name="service" level="TRACE" additivity="false">
      <AppenderRef ref="Console" level="INFO"/>
      <AppenderRef ref="FileAppender" level="INFO"/>
      <AppenderRef ref="DiagnosticFile" level="TRACE"/>
    </Logger>
    <Logger name="DAO" level="TRACE" additivity="false">
      <AppenderRef ref="Console" level="INFO"/>
      <AppenderRef ref="FileAppender" level="INFO"/>
      <AppenderRef ref="DiagnosticFile" level="TRACE"/>
    </Logger>
    <Logger name="util" level="TRACE" additivity="false">
      <AppenderRef ref="Console" level="INFO"/>
      <AppenderRef ref="FileAppender" level="INFO"/>
      <AppenderRef ref="DiagnosticFile" level="TRACE"/>
    </Logger>
    <Logger name="exception" level="TRACE" additivity="false">
      <AppenderRef ref="Console" level="INFO"/>
      <AppenderRef ref="FileAppender" level="INFO"/>
      <AppenderRef ref="DiagnosticFile" level="TRACE"/>
    </Logger>

    <Root level="INFO">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="FileAppender"/>
    </Root>
  </Loggers>
</Configuration>

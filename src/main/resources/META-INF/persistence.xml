<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <persistence-unit name="EmployeePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- JNDI DataSource from Tomcat (connection pool from Milestone 2) -->
    <non-jta-data-source>java:comp/env/jdbc/EmployeeDB</non-jta-data-source>
    <class>model.Employee</class>
    <class>model.Hobby</class>

    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.DB2Dialect"/>
      <!-- update: create/update schema (e.g. join table); use validate in production if schema is managed separately -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>

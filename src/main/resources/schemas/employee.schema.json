{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Employee",
  "type": "object",
  "required": ["name"],
  "properties": {
    "id": { "type": "integer", "minimum": 1 },
    "name": { "type": "string", "minLength": 1, "maxLength": 255 },
    "gender": { "type": ["string", "null"], "maxLength": 50 },
    "dateOfBirth": { "type": ["string", "null"], "maxLength": 20 },
    "phoneNumber": { "type": ["string", "null"], "maxLength": 50 },
    "hobbies": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/hobby" },
          { "type": "string", "minLength": 1, "maxLength": 255 }
        ]
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "hobby": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "id": { "type": "integer", "minimum": 1 },
        "name": { "type": "string", "minLength": 1, "maxLength": 255 }
      },
      "additionalProperties": false
    }
  }
}
